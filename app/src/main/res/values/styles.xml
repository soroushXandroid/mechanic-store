<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Context" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:windowBackground">@color/windowBackground</item>
    </style>

    <style name="Widget.Mechanic.Toolbar" parent="Widget.AppCompat.Toolbar">

        <item name="titleTextColor">@color/textColorPrimary</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="titleTextAppearance">@style/TextAppearance.Mechanic.Toolbar</item>
        <item name="navigationIconTint">@color/textColorPrimary</item>
    </style>

    <style name="TextAppearance.Mechanic.Toolbar" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>

    </style>

    <style name="Widget.Mechanic.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="fontFamily">@font/behdad</item>
    </style>

    <style name="Widget.Mechanic.Button" parent="Widget.MaterialComponents.Button">

        <item name="android:stateListAnimator">@animator/elevation_anim</item>
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="fontFamily">@font/special</item>
    </style>

    <style name="Widget.SignIn.Button" parent="Widget.MaterialComponents.Button">

        <item name="android:stateListAnimator">@animator/elevation_anim</item>
        <item name="backgroundTint">@color/colorPrimaryDark</item>
        <item name="fontFamily">@font/special</item>
    </style>

    <style name="CornerRound" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="CornerCut" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="CornerCutPerson" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSizeTopRight">16dp</item>
    </style>

    <style name="Widget.Mechanic.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

        <item name="hintTextAppearance">@style/TextAppearance.Mechanic.HintText</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="boxStrokeColor">@color/colorAccent</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="startIconTint">@color/colorPrimary</item>
    </style>

    <style name="TextAppearance.Mechanic.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Widget.Person.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">

        <item name="hintTextAppearance">@style/TextAppearance.Person.HintText</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="startIconTint">@color/colorPrimary</item>
    </style>

    <style name="TextAppearance.Person.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Widget.Shop.TabLayout" parent="Widget.MaterialComponents.TabLayout">

        <item name="tabIndicatorColor">@color/colorPrimaryDark</item>
        <item name="tabSelectedTextColor">@color/ex</item>
        <item name="fontFamily">@font/behdad</item>
        <item name="tabIndicatorAnimationMode">elastic</item>
        <item name="tabIndicatorAnimationDuration">500</item>
        <item name="tabIconTint">@color/colorAccent</item>
        <item name="tabTextAppearance">@style/TextAppearance.Mechanic.TabItem</item>
    </style>

    <style name="TextAppearance.Mechanic.TabItem" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/behdad</item>
    </style>

    <style name="Widget.Mechanic.Fab" parent="Widget.MaterialComponents.FloatingActionButton">

        <item name="android:backgroundTint">#EFEAEA</item>
        <item name="elevation">8dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="rippleColor">@color/colorAccent</item>
        <item name="borderWidth">1dp</item>
    </style>

</resources>
